<h2>Editing "<%= @song.title %>"</h2>
<%= form_tag song_path(@song), method: "patch" do %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h3>There were some errors:</h3>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @song do |f| %>
  <%= f.text_field :title %>
  <%= f.check_box :released %>
  <%= f.number_field :release_year %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre %>
<% end %>
